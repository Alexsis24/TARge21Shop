@model TARge21Shop.Models.Houses.HouseCreateUpdateViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}


<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="ListedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="BuildingType" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BuildingType" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Address" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Country" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Country" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="City" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="City" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="State" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="State" class="form-control" />
            </div>
        </div>
        <hr />

        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="houses" type="submit" class=" btn btn-primary" value="Update" />
        }
        else
        {
            <input asp-action="create" asp-controller="houses" type="submit" class=" btn btn-primary" value="Create" />
        }

        <a asp-action="index" class="btn btn-primary">Back</a>

    </form>
</div>

