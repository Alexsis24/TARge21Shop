@model TARge21Shop.Models.Houses.HouseDetailsViewModel

<h1>Details</h1>

<div>
    <h4>Houses</h4>
    <hr />
    <dl class="row">
        
        <div class="form-group row">
            <label asp-for="BuildingType" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.BuildingType)
        </div>
       
        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Address)
        </div>

        <div class="form-group row">
            <label asp-for="Country" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Country)
        </div>

        <div class="form-group row">
            <label asp-for="City" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.City)
        </div>

        <div class="form-group row">
            <label asp-for="State" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.State)
        </div>

        <div class="form-group row">
            <label asp-for="ListedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ListedAt)
        </div>

        <div class="form-group row">
            <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ModifiedAt)
        </div>
        
    </dl>
    <a asp-action="Index" asp-controller="houses" class="btn btn-danger">Back</a>
</div>