@model TARge21Shop.Models.Car.CarCreateUpdateViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}


<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="ListedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Brand" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Model" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Model" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="PassengerCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="PassengerCount" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="FullTripsCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="FullTripsCount" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="MaintenanceCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="MaintenanceCount" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="LastMaintenance" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="LastMaintenance" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EnginePower" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="EnginePower" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="BuiltDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BuiltDate" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ListedAt" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ListedAt" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ModifiedAt" class="form-control" />
            </div>
        </div>

        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="cars" type="submit" class=" btn btn-primary" value="Update" />
        }
        else
        {
            <input asp-action="create" asp-controller="cars" type="submit" class=" btn btn-primary" value="Create" />
        }

        <a asp-action="index" class="btn btn-primary">Back</a>

    </form>
</div>

