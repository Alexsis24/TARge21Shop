@model TARge21Shop.Models.OpenWeather.SearchCityViewModel

<h1>City</h1>

<div class="container">
	<dl class="row">
		<h2>Forecast for the selected city</h2>

		<div class="form-group row">
			<label asp-for="CityName" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.CityName)
		</div>

		<div class="form-group row">
			<label asp-for="Timezone" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Timezone)
		</div>

		<div class="form-group row">
			<label asp-for="Lon" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Lon)
		</div>

		<div class="form-group row">
			<label asp-for="Lat" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Lat)
		</div>

		<div class="form-group row">
			<label asp-for="Temp" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Temp)
		</div>

		<div class="form-group row">
			<label asp-for="Feels_like" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Feels_like)
		</div>

		<div class="form-group row">
			<label asp-for="Pressure" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Pressure)
		</div>

		<div class="form-group row">
			<label asp-for="Humidity" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Humidity)
		</div>
	</dl>
</div>
